# Start with system path
# Retrieve it from getconf, otherwise it's just current $PATH

is-executable getconf && PATH=$(`command -v getconf` PATH)

# Prepend new items to path (if directory exists)

lts_name=`cat $NVM_DIR/alias/lts/'*'`
lts_version=`cat $NVM_DIR/alias/$lts_name`

prepend-path "/bin"
prepend-path "/usr/bin"
prepend-path "/usr/local/bin"
prepend-path "$BREW_PREFIX/opt/ruby/bin"
prepend-path "$BREW_PREFIX/opt/coreutils/libexec/gnubin"
prepend-path "$BREW_PREFIX/opt/grep/libexec/gnubin"
prepend-path "$BREW_PREFIX/bin"
prepend-path "$BREW_PREFIX/sbin"
prepend-path "$DOTFILES_DIR/bin"
prepend-path "$HOME/bin"
prepend-path "/sbin"
prepend-path "/usr/sbin"
prepend-path "/usr/local/sbin"
prepend-path ~/.pyenv/shims
prepend-path ~/.pyenv/bin
prepend-path "$NVM_DIR/versions/node/$lts_version/bin"
prepend-path "/snap/bin"
prepend-path "$GEM_HOME/bin"

# Remove duplicates (preserving prepended items)
# Source: http://unix.stackexchange.com/a/40755

PATH=`echo -n $PATH | awk -v RS=: '{ if (!arr[$0]++) {printf("%s%s",!ln++?"":":",$0)}}'`

# Wrap up

export PATH
