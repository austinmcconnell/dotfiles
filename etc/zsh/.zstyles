#!/bin/zsh
#
# .zstyles - Set zstyle settings for plugins that need them.
#

# Antidote
zstyle ':antidote:bundle' use-friendly-names 'yes' # obsolete after antidote 2.0 is released
# Enable zcompilation for static files
zstyle ':antidote:static' zcompile on
# Only regenerate static file if bundle file has changed and is newer
zstyle ':antidote:static' refresh-on-update true
# Antidote file paths
zstyle ':antidote:bundle' file ${ZDOTDIR:-$HOME}/.zsh_plugins.txt
zstyle ':antidote:static' file ${ZDOTDIR:-$HOME}/.zsh_plugins.zsh

# Zephyr core
zstyle ':zephyr:core' load-core-functions-only yes

# Zephyr confd
zstyle ':zephyr:plugin:confd' config-dirs ${ZDOTDIR:-$HOME}/conf.d
zstyle ':zephyr:plugin:confd' zcompile yes

# Docker
zstyle ':completion:*:*:docker:*' option-stacking yes
zstyle ':completion:*:*:docker-*:*' option-stacking yes

# History
zstyle ':zephyr:plugin:history' histfile ${ZDOTDIR:-$HOME}/.zsh_history
zstyle ':zephyr:plugin:history' histsize 10000000 # How many commands from history file are loaded into shell's memory
zstyle ':zephyr:plugin:history' savehist 10000000 # How many commands history file can hold. Should be equal to or larger than HISTSIZE

# Prompt
zstyle ':zephyr:plugin:prompt' theme 'starship'
