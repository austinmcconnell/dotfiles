#!/bin/zsh
#
# .zstyles - Set zstyle settings for plugins that need them.
#

# Antidote
zstyle ':antidote:bundle' path ${ZDOTDIR:-$HOME}/.antidote
zstyle ':antidote:bundle' use-friendly-names 'yes' # obsolete after antidote 2.0 is released
zstyle ':antidote:bundle' parallel yes
zstyle ':antidote:static' zcompile on                             # Enable zcompilation for static files
zstyle ':antidote:static' refresh-on-update true                  # Only regenerate static file if bundle file has changed and is newer
zstyle ':antidote:bundle' file ${ZDOTDIR:-$HOME}/.zsh_plugins.txt # Antidote file paths
zstyle ':antidote:static' file ${ZDOTDIR:-$HOME}/.zsh_plugins.zsh # Antidote file paths

# Zephyr core
zstyle ':zephyr:core' load-core-functions-only yes

# Completion
zstyle ':zephyr:plugin:completion' force-rehash yes
zstyle ':zephyr:plugin:completion:*' use-cache yes
zstyle ':zephyr:plugin:completion:*' cache-path "${ZDOTDIR:-$HOME}/.zcompcache"

# Confd
zstyle ':zephyr:plugin:confd' config-dirs ${ZDOTDIR:-$HOME}/conf.d
zstyle ':zephyr:plugin:confd' zcompile yes

# Editor
zstyle ':zephyr:plugin:editor' key-bindings 'emacs'

# History
zstyle ':zephyr:plugin:history' histfile ${ZDOTDIR:-$HOME}/.zsh_history
zstyle ':zephyr:plugin:history' histsize 10000000 # How many commands from history file are loaded into shell's memory
zstyle ':zephyr:plugin:history' savehist 10000000 # How many commands history file can hold. Should be equal to or larger than HISTSIZE

# Prompt
zstyle ':zephyr:plugin:prompt' theme 'starship'

# Terminal
zstyle ':zephyr:plugin:terminal' auto-title yes
zstyle ':zephyr:plugin:terminal' title-format '%n@%m: %~'
zstyle ':zephyr:plugin:utility' safe-ops yes

# Docker
zstyle ':completion:*:*:docker:*' option-stacking yes
zstyle ':completion:*:*:docker-*:*' option-stacking yes
