[user]
	name = Austin McConnell
	email = austin.s.mcconnell@gmail.com
	signingkey = D10D0D7DE28CE6C6

[credential]
	helper = osxkeychain

[core]
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

[push]
	default = simple
	followTags = true
	autoSetupRemote = true

[merge]
	ff = only

[fetch]
 	prune = true

[alias]
	amend = commit --amend --reuse-message=HEAD
	br = branch
	ci = commit
	co = checkout
	contrib = shortlog --summary --numbered
    ctags = !.git/hooks/ctags
	history = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	unstage = reset --hard HEAD
	wdiff = diff --word-diff

[init]
	templatedir = ~/.git-templates
	defaultBranch = main

[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red 52
	newNormal = green
	newHighlight = green 22

[color "diff"]
	meta = 227
	frag = magenta
	commit = 227
	old = red
	new = green
	whitespace = red reverse
[commit]
	gpgsign = false
[pull]
	ff = only
[blame]
	date = short

[includeIf "gitdir:~/projects/unite-us/"]
    path = ~/.gitconfig-uniteus

[includeIf "gitdir:/Users"]
    path = ~/.gitconfig-macos

[includeIf "gitdir:/home"]
    path = ~/.gitconfig-linux
