{
    "allowedTools": [
        "convert_time",
        "fs_read",
        "get_current_time",
        "get_file_info",
        "git_branch",
        "git_diff",
        "git_diff_staged",
        "git_diff_unstaged",
        "git_log",
        "git_show",
        "git_status",
        "jira_get_create_meta",
        "jira_get_issue",
        "jira_get_project",
        "jira_ls_comments",
        "jira_ls_issues",
        "jira_ls_projects",
        "jira_ls_statuses",
        "jira_ls_worklogs",
        "list_directory_with_sizes",
        "read_media_file",
        "read_multiple_files",
        "read_text_file",
        "search_files",
        "sequentialthinking",
        "web_fetch",
        "web_search"
    ],
    "description": "JIRA-focused agent with deep SCRUM and Agile knowledge, restricted to safe operations",
    "hooks": {
        "agentSpawn": [],
        "userPromptSubmit": []
    },
    "includeMcpJson": true,
    "mcpServers": {
        "jira": {
            "args": [
                "@aashari/mcp-server-atlassian-jira"
            ],
            "command": "npx",
            "disabled": false,
            "env": {},
            "timeout": 120000
        },
        "time": {
            "args": [
                "-m",
                "mcp_server_time",
                "--local-timezone=America/Chicago"
            ],
            "command": "python",
            "disabled": false,
            "env": {},
            "timeout": 30000
        }
    },
    "name": "jira",
    "prompt": "You are a JIRA-focused agent with deep expertise in SCRUM and Agile methodologies. Your primary role is to help create, review, and update JIRA user stories and other work items according to SCRUM best practices.\n\nYou have the ability to:\n- READ, CREATE, and UPDATE JIRA issues (but NEVER DELETE)\n- Analyze and improve user story quality\n- Provide guidance on SCRUM ceremonies and practices\n- Help with sprint planning and backlog refinement\n- Review acceptance criteria and definition of done\n- Check git history and commits related to JIRA tickets\n\nAlways follow SCRUM principles and ensure user stories meet the INVEST criteria (Independent, Negotiable, Valuable, Estimable, Small, Testable). When reviewing or creating stories, focus on user value, clear acceptance criteria, and proper story structure.\n\nIMPORTANT: When creating new JIRA issues, ALWAYS:\n1. First present the proposed story in markdown format for user review\n2. Ask for feedback and wait for user confirmation or requested changes\n3. Only create the actual JIRA ticket after the user approves the content\n4. Never create JIRA tickets without explicit user approval of the story content",
    "resources": [
        "file://AGENTS.md",
        "file://~/.dotfiles/etc/kiro-cli/steering/jira-scrum/**/*.md",
        "file://.kiro/steering/**/*.md",
        "file://README.md"
    ],
    "tools": [
        "*"
    ],
    "toolsSettings": {
        "shell": {
            "allowedCommands": [
                "command -v .*",
                "grep .*",
                "head .*",
                "hostname",
                "ls .*",
                "man .*",
                "pwd",
                "sort .*",
                "tail .*",
                "type .*",
                "uniq .*",
                "wc .*",
                "which .*",
                "whoami"
            ],
            "deniedCommands": [
                "aws .*",
                "brew install .*",
                "chmod .*",
                "chown .*",
                "cp .*",
                "crontab .*",
                "dd .*",
                "docker .*",
                "git commit .*",
                "git merge .*",
                "git push .*",
                "git rebase .*",
                "kill .*",
                "killall .*",
                "kubectl .*",
                "mv .*",
                "npm install .*",
                "pip install .*",
                "pkill .*",
                "rm .*",
                "rmdir .*",
                "service .*",
                "sudo .*",
                "systemctl .*"
            ]
        },
        "write": {
            "allowedPaths": [
                "~/projects/**",
                "~/repositories/**",
                "~/.dotfiles/**",
                "./**"
            ],
            "deniedPaths": [
                "/etc/**",
                "/usr/**",
                "/bin/**",
                "/sbin/**",
                "/System/**"
            ]
        },
        "web_fetch": {
            "trusted": [
                ".*atlassian\\.com.*",
                ".*atlassian\\.net.*"
            ],
            "blocked": [
                ".*pastebin\\.com.*"
            ]
        }
    }
}
